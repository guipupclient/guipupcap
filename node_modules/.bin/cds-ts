#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/ts-node-cwd" ]; then
  exec "$basedir/ts-node-cwd"  "$basedir/../@sap/cds-dk/bin/cds-ts.js" "$@"
else 
  exec ts-node-cwd  "$basedir/../@sap/cds-dk/bin/cds-ts.js" "$@"
fi
